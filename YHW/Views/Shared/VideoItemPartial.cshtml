@model YHW.Models.Content.Video

<div style="margin-bottom:10px;" class="col-md-6 col-md-12">
  <iframe width="420" height="315"
          src="@Model.VideoURL"
          frameborder="0" allowfullscreen></iframe>
  <div class="col-md-9">
    <span style="font-size:large;font-weight:bold;"><a style="color:black;" href="@Url.Action("Item", "Video", new { id = Model.ID})">@Model.Title</a></span>
    <p>@Model.Author.FirstName @Model.Author.LastName</p>
  </div>
  <div class="col-md-3">
    @{
      var s = "http://youheardwrong.org" + Url.Action("Item", "Video", new { id = Model.ID });
    }
    <div class="fb-like" data-href="@s" data-layout="button" data-action="like" data-show-faces="true" data-share="true"></div>
    <a href="https://twitter.com/share" class="twitter-share-button" data-url="@s" data-via="youheardwrong" data-lang="en">Tweet</a>
  </div>
</div>