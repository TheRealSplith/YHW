@model YHW.Models.Content.Video

<div class="yhw-content">
  <div style="margin-bottom:5px;" class="video-container">
    @{
      var src = Model.VideoURL +"&output=embed";
    }
    <iframe width="420" height="315"
            src="@src"
            frameborder="0" allowfullscreen></iframe>
  </div>
  <div class="row">
    <div class="col-sm-7 col-md-7 col-xs-8">
      <span style="font-size:large;font-weight:bold;"><a style="color:black;" href="@Url.Action("Item", "Video", new { id = Model.ID})">@Model.Title</a></span>
      <br />
      <span>@Model.Author.FirstName @Model.Author.LastName</span>
      <br />
      <span>@Model.CreatedDate.ToShortDateString()</span>
    </div>
    <div class="col-sm-2 col-md-3 col-xs-4">
      @{
        var s = "http://youheardwrong.org" + Url.Action("Item", "Video", new { id = Model.ID });
      }
      <div class="fb-like" data-href="@s" data-layout="button" data-action="like" data-show-faces="true" data-share="true"></div>
      <a href="https://twitter.com/share" data-text="@Model.Title" class="twitter-share-button" data-url="@s" data-via="youheardwrong" data-lang="en">Tweet</a>
    </div>
  </div>
</div>