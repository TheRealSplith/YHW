@model List<YHW.Models.Content.ITopicContent>

<h1 style="margin-top: 0px; margin-bottom: 0px;">Common Core</h1>

<div class="col-sm-10 col-md-5">
  <h1 style="margin-top:0px;"><small>/ Facts</small></h1>
  @foreach (var fact in Model.Where(c => !c.IsOpinion))
  {
    String partialName = fact.TypeName + "ItemPartial";
    <div class="row">
      @Html.Partial(partialName, fact)
    </div>
  }
</div>

<div class="col-md-offset-1 col-md-5 col-sm-10" >
  <h1 style="margin-top:0px;"><small>/ Opinions</small></h1>
  @foreach (var opinion in Model.Where(c => c.IsOpinion))
  {
    String partialName = opinion.TypeName + "ItemPartial";
    <div class="row">
      @Html.Partial(partialName, opinion)
    </div>
  }
</div>