@model List<YHW.Models.Content.Blog>

<div style="font-size:xx-large; font-weight:bold">Common Core</div>
@if (ViewBag.isOpinion == true)
{
  <span style="font-size:large; font-weight:bold; padding-left: 50px;">/ Opinion <small>/ Article</small></span>
}
else
{
  <span style="font-size:large; font-weight:bold; padding-left: 50px;">/ Fact <small>/ Article</small></span>
}

@* If there are no items, display a message indicating such *@
@if (Model.Count == 0)
{
  <h2>No items found, Try another search!</h2>
}

@foreach (var quote in Model)
{
  @Html.Partial("BlogItemPartial", quote)
}
