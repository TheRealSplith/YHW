@model List<YHW.Models.Content.Quote>

<div class="row">
  <h1 style="margin-top: 0px; margin-bottom: 0px;">Common Core</h1>
  @if (ViewBag.isOpinion == true)
  {
    <h1 style="margin-top:0px;"><small>/ Opinion <small>/ Quote</small></small></h1>
  }
  else
  {
    <h1 style="margin-top:0px;"><small>/ Fact <small>/ Quote</small></small></h1>
  }

  @* If there are no items, display a message indicating such *@
  @if (Model.Count == 0)
  {
    <h2>No items found, Try another search!</h2>
  }
</div>

@foreach (var quote in Model)
{
  @Html.Partial("QuoteItemPartial", quote)
}
