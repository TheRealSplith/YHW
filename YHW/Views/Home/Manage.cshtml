@model YHW.Models.YHWProfile

@{
    ViewBag.Title = "Manage";
    Layout = "~/Views/Shared/_LayoutHiddenTwitter.cshtml";
}

<div class="col-sm-4 col-lg-4 col-xs-12">  
  @using (Html.BeginForm("FileUpload", "Home", FormMethod.Post,
                            new { role = "form", enctype = "multipart/form-data" }))
  {
    <div class="form-group">
      <label class="control-label" for="file">Upload File Image</label>
      <br />
      <input type="file" name="file" id="file" data-filename-placement="inside">
    </div>
    <input style="margin-bottom:10px;" type="submit" value="Upload" class="btn btn-info " />
  }
</div>

@section scripts {
  @Scripts.Render("~/Scripts/bootstrap.file-input.js")
  <script type="text/javascript">
    $('input[type=file]').bootstrapFileInput();
  </script>
}